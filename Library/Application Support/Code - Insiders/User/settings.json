{
  "[erb]": {
    "editor.defaultFormatter": "elia.erb-formatter"
  },
  "[markdown][typescript][yaml][html][javascript][json][jsonc][javascriptreact][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true
  },
  "[sass]": {
    "editor.defaultFormatter": "syler.sass-indented"
  },
  "[shellscript][properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[markdown]": {
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "editor.semanticHighlighting.enabled": true,
  "breadcrumbs.enabled": true,

  // CSS
  "css.validate": false,
  // Diff Editor
  "diffEditor.diffAlgorithm": "advanced",
  "diffEditor.ignoreTrimWhitespace": false,
  // Editor
  "editor.accessibilitySupport": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'JetBrains Mono', 'Monaspace Neon Var', monospace",
  "editor.fontVariations": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.formatOnType": true,
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.guides.bracketPairs": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "on",
    "strings": "on"
  },
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.rulers": [120],
  "editor.lineHeight": 20,
  "editor.snippetSuggestions": "top",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.scrollWithEditor": true,
  "editor.suggest.insertMode": "replace",
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 120,
  // Emmet
  "emmet.includeLanguages": {
    "erb": "html",
    "html-erb": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  // ERB
  "erb-formatter.commandPath": "erb-format",
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.rb": "${capture}.*erb, ${capture}_controller.js",
    "Gemfile": "Gemfile.lock, Gemfile_next.lock"
  },
  // Files
  "files.associations": {
    ".prettierignore": "ignore",
    ".slugignore": "ignore",
    "Gemfile_next.lock": "ruby",
    "Guardfile": "ruby",
    "overcommit.gemfile.lock": "ruby",
    "Procfile*": "procfile",
    "yabairc": "shellscript"
  },
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.bridgetown-cache/**": true,
    "**/.bridgetown-webpack/**": true,
    "**/.frontmatter/**": true,
    "**/.vercel/**": true,
    "**/app/assets/builds/**": true,
    ".torchlight-cache": true,
    "rails.rb": true,
    "spec/cassettes": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.bridgetown-cache/**": true,
    "**/.bridgetown-webpack/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    ".torchlight-cache": true,
    "build": true,
    "deploy": true
  },
  // Git
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.followTagsWhenSync": true,
  "git.pruneOnFetch": true,
  // GitHub
  "github.copilot-labs.showTestGenerationLenses": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "scminput": true,
    "shellscript": true,
    "yaml": true
  },
  "githubPullRequests.pullBranch": "never",
  // GitLens
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.views.commitDetails.files.layout": "list",
  // Grunt
  "grunt.autoDetect": "off",
  // Gulp
  "gulp.autoDetect": "off",
  // Jake
  "jake.autoDetect": "off",
  // JavaScript
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": false,
  "javascript.inlayHints.variableTypes.enabled": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "json.schemas": [
    {
      "fileMatch": ["/.babelrc"],
      "url": "https://json.schemastore.org/babelrc"
    },
    {
      "fileMatch": ["/.prettierrc"],
      "url": "https://json.schemastore.org/prettierrc"
    },
    {
      "fileMatch": ["/vercel.json"],
      "url": "https://openapi.vercel.sh/vercel.json"
    },
    {
      "fileMatch": ["/jsconfig.json"],
      "url": "https://json.schemastore.org/jsconfig"
    },
    {
      "fileMatch": ["/.hintrc"],
      "url": "https://json.schemastore.org/htmlhint.json"
    }
  ],
  // Markdown
  "markdown.updateLinksOnFileMove.enabled": "prompt",
  "markdown.validate.enabled": true,
  "markdown.validate.referenceLinks.enabled": "ignore",
  // Notebook
  "notebook.lineNumbers": "on",
  // NPM
  "npm.enableRunFromFolder": true,
  // Obsidian
  "obsidianmd.vaultPath": "~/git/andrewmcodes/digital-brain",
  // Peacock
  "peacock.favoriteColors": [
    {
      "name": "Red",
      "value": "#e5484d"
    },
    {
      "name": "Blue",
      "value": "#0090ff"
    }
  ],
  // Pieces
  "pieces.setCopilotLocation": true,
  // Project Manager
  "projectManager.git.baseFolders": [
    "$home/git/experiments",
    "$home/git/andrewmcodes",
    "$home/git/backup",
    "$home/git/work"
  ],
  "projectManager.sortList": "Recent",
  // Redhat Yaml
  "redhat.telemetry.enabled": false,
  // Ruby LSP
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "codeLens": true,
    "completion": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": false, // ! TURN THIS OFF
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true
  },
  "rubyLsp.enableExperimentalFeatures": true,
  "rubyLsp.formatter": "none", // ! TURN THIS OFF
  "rubyLsp.rubyVersionManager": "asdf",
  "rubyLsp.yjit": false,
  // SCSS
  "scss.validate": false,
  "search.actionsPosition": "auto",
  // Search
  "search.exclude": {
    "**/*.code-search": true,
    "**/*.lock": true,
    "**/.bridgetown-cache/**": true,
    "**/.bridgetown-webpack/**": true,
    "**/.frontmatter/**": true,
    "**/.vercel/**": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/log": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/vendor": true,
    ".torchlight-cache": true,
    "app/assets/builds": true,
    "CHANGELOG.md": true,
    "rails.rb": true,
    "**/.ruby-lsp": true
  },
  "search.collapseResults": "auto",
  // Security
  "security.workspace.trust.untrustedFiles": "open",
  // Standard Ruby
  "standardRuby.commandPath": "${userHome}/.asdf/shims/standardrb",
  "standardRuby.mode": "enableUnconditionally",
  "symbols.files.associations": {
    ".vimrc": "shell",
    "^\\..+rc$": "gear",
    "Procfile": "gear",
    "yabairc": "shell"
  },
  "symbols.folders.associations": {
    "app": "folder-app",
    "assets": "folder-assets",
    "controllers": "folder-red-code",
    "javascript": "js",
    "models": "database",
    "views": "folder-templates"
  },
  "symbols.hidesExplorerArrows": false,
  // Tailwind
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "class_name",
    "class"
  ],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "markdown": "html",
    "ruby": "html"
  },
  // telemetry
  "telemetry.telemetryLevel": "off",
  // Terminal
  "terminal.external.osxExec": "Warp.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "'Monaspace Neon','JetBrainsMono Nerd Font'",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.macOptionClickForcesSelection": true,
  // "terminal.integrated.smoothScrolling": true,
  // TypeScript
  // "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  // "typescript.inlayHints.parameterTypes.enabled": true,
  // "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Vim
  "vim.easymotion": true,
  "vim.foldfix": true,
  "vim.highlightedyank.color": "rgba(230, 97, 89, 0.7)",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "white",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "after": ["<Esc>"],
      "before": ["j", "j"]
    }
  ],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "g", "g"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.revealDefinitionAside"]
    },
    {
      "before": ["<leader>", "p", "p"],
      "commands": ["workbench.action.quickOpen"]
    },
    // {
    //   "before": [":"],
    //   "commands": ["workbench.action.showCommands"],
    //   "silent": true
    // },
    // Rails: Switch to Test
    {
      "before": ["<leader>", "s", "t"],
      "commands": ["rails.switchToTest"]
    },
    // Harpoon Add
    {
      "before": ["<leader>", "h", "a"],
      "commands": ["vscode-harpoon.addEditor"]
    },
    {
      "before": ["<leader>", "h", "e"],
      "commands": ["vscode-harpoon.editEditors"]
    },
    {
      "before": ["<C-b>"],
      "commands": ["vscode-harpoon.editorQuickPick"]
    },
    {
      "before": ["<leader>", "1"],
      "commands": ["vscode-harpoon.gotoEditor1"]
    },
    {
      "before": ["<leader>", "2"],
      "commands": ["vscode-harpoon.gotoEditor2"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    },
    {
      "after": ["d", "d"],
      "before": ["<leader>", "d"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "after": ["<leader>", "<leader>", "2", "s"],
      "before": ["s"]
    },
    {
      "after": ["<leader>", "<leader>", "j"],
      "before": ["<C-j>"]
    },
    {
      "after": ["<leader>", "<leader>", "k"],
      "before": ["<C-k>"]
    },
    {
      "before": ["leader", "R"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["leader", "w"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader", "x"],
      "commands": [":x!"]
    },
    {
      "after": ["g", "g", "V", "G"],
      "before": ["<c-a>"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "after": ["^"],
      "before": ["H"]
    },
    {
      "after": ["$"],
      "before": ["L"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    }
  ],
  "vim.useSystemClipboard": true,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.commandlineinprogress": ["#0090ff", "#c2e6ff"],

  // Status bar color when in EasyMotionInput mode.
  "vim.statusBarColors.easymotioninputmode": ["#0090ff", "#c2e6ff"],

  // Status bar color when in EasyMotion mode.
  "vim.statusBarColors.easymotionmode": ["#0090ff", "#c2e6ff"],

  // Status bar color when in Insert mode.
  "vim.statusBarColors.insert": ["#132d21", "#b1f1cb"],

  // Status bar color when in Normal mode.
  "vim.statusBarColors.normal": ["#111111", "#eeeeee"],

  // Status bar color when in Replace mode.
  "vim.statusBarColors.replace": ["#111111", "#c2e6ff"],

  // Status bar color when in SearchInProgress mode.
  "vim.statusBarColors.searchinprogressmode": ["#0090ff", "#c2e6ff"],

  // Status bar color when in SurroundInput mode.
  "vim.statusBarColors.surroundinputmode": ["#0090ff", "#c2e6ff"],

  // Status bar color when in Visual mode.
  "vim.statusBarColors.visual": ["#8e4ec6", "#ecd9fa"],

  // Status bar color when in VisualBlock mode.
  "vim.statusBarColors.visualblock": ["#86592d", "#c2e6ff"],

  // Status bar color when in VisualLine mode.
  "vim.statusBarColors.visualline": ["#005f5f", "#c2e6ff"],
  // Window
  "window.commandCenter": true,
  "window.newWindowDimensions": "inherit",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Orion",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "shrink",
  "workbench.editor.showIcons": false,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.experimental.share.enabled": true,
  "workbench.productIconTheme": "fluent-icons",
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "readme",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 4,
  "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss06', 'ss07', 'ss08'",
  "editor.fontWeight": "300",
  "security.promptForLocalFileProtocolHandling": false,
  "terminal.integrated.splitCwd": "workspaceRoot",
  "terminal.integrated.macOptionIsMeta": true,
  // "workbench.colorCustomizations": {
  //   "editor.background": "#191919",
  //   "editor.foreground": "#b4b4b4",
  //   "statusBar.background": "#8e4ec6",
  //   "statusBar.noFolderBackground": "#8e4ec6",
  //   "statusBar.debuggingBackground": "#8e4ec6",
  //   "statusBar.foreground": "#ecd9fa",
  //   "statusBar.debuggingForeground": "#ecd9fa"
  // },
  "workbench.sideBar.location": "right",
  "testExplorer.useNativeTesting": true,
  "rubyTestExplorer.logpanel": true,
  "rubyTestExplorer.testFramework": "rspec",
  "breadcrumbs.symbolPath": "last",
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "githubPullRequests.fileListLayout": "flat",
  "window.titleBarStyle": "custom",
  "workbench.colorCustomizations": {
    "statusBar.background": "#111111",
    "statusBar.noFolderBackground": "#111111",
    "statusBar.debuggingBackground": "#111111",
    "statusBar.foreground": "#eeeeee",
    "statusBar.debuggingForeground": "#eeeeee"
  },
  "orion-vscode.accentColor": "blue",
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.welcomeMessage": "never",
  "logViewer.watch": ["${workspaceFolder}/log/development.log"],
  "logViewer.windows.allowBackslashAsPathSeparator": false,
  "logViewer.options": {
    "encoding": "ascii"
  },
  "workbench.iconTheme": "file-icons",
  "editor.fontSize": 13,
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    }
  },
  "accessibility.signals.terminalBell": {
    "sound": "on"
  },
  "terminal.integrated.enableVisualBell": true,
  "pieces.code-lens": false,
  "npm-intellisense.scanDevDependencies": true
}
