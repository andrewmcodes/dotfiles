{
  /*
   * File Watching and Search
   */
  "search.exclude": {
    "**/.bridgetown-cache/**": true,
    "**/.bridgetown-webpack/**": true,
    "**/*.code-search": true,
    "**/*.lock": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/log": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/vendor": true,
    "CHANGELOG.md": true,
    "rails.rb": true,
    ".torchlight-cache": true,
    "**/.vercel/**": true,
    "**/.frontmatter/**": true
  },
  "files.exclude": {
    "**/.bridgetown-cache/**": true,
    "**/.bridgetown-webpack/**": true,
    "rails.rb": true,
    ".torchlight-cache": true,
    "**/.vercel/**": true,
    "**/.frontmatter/**": true
  },
  "files.watcherExclude": {
    "**/.bridgetown-cache/**": true,
    "**/.bridgetown-webpack/**": true,
    "**/tmp/**": true,
    "**/node_modules/**": true,
    "build": true,
    "deploy": true,
    ".torchlight-cache": true
  },

  /*
   * Core Settings
   */
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showModules": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.showNull": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.showVariables": false,
  "breadcrumbs.symbolPath": "off",
  "css.lint.boxModel": "warning",
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.duplicateProperties": "warning",
  "css.lint.float": "warning",
  "editor.codeActionsOnSave": { "source.fixAll.markdownlint": true },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.formatOnType": false,
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.5,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  // "editor.quickSuggestions": {
  //   "strings": "on"
  // },
  "editor.renderWhitespace": "all",
  "editor.rulers": [120, 80],
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.tabSize": 2,
  "emmet.includeLanguages": { "erb": "html" },
  "emmet.triggerExpansionOnTab": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "*.rb": "${capture}.erb",
    ".env": ".env.*",
    "Gemfile": "Gemfile.lock, Gemfile_next.lock"
  },
  "files.associations": {
    "*.json.liquid": "json",
    "*.yaml.liquid": "yaml",
    "*.md.liquid": "markdown",
    "*.js.liquid": "liquid-javascript",
    "*.css.liquid": "liquid-css",
    "*.scss.liquid": "liquid-scss",
    "*.zsh": "shellscript",
    ".envrc": "env",
    ".tool-versions": "properties",
    ".asdfrc": "properties",
    ".default-gems": "properties",
    ".default-npm-packages": "properties",
    "Procfile*": "procfile",
    ".env*": "dotenv"
  },
  "files.autoSave": "onFocusChange",
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.followTagsWhenSync": true,
  "git.openAfterClone": "alwaysNewWindow",
  "git.pruneOnFetch": true,
  "git.scanRepositories": ["~/git", "~/projects"],
  "html.format.endWithNewline": true,
  "html.format.indentInnerHtml": true,
  "javascript.referencesCodeLens.enabled": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "npm.enableRunFromFolder": true,
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.float": "warning",
  "scss.lint.importStatement": "warning",
  "scss.lint.unknownVendorSpecificProperties": "warning",
  "scss.lint.zeroUnits": "warning",
  "search.quickOpen.includeSymbols": true,
  "search.useGlobalIgnoreFiles": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontFamily": "'JetBrainsMonoNL Nerd Font', 'JetBrains Mono', monospace",
  "terminal.integrated.macOptionClickForcesSelection": true,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.external.osxExec": "Warp.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.detectLocale": "on",
  "terminal.integrated.enableBell": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.25,
  "window.autoDetectColorScheme": true,
  "window.nativeFullScreen": false,
  "window.newWindowDimensions": "inherit",
  "window.commandCenter": true,
  "workbench.fontAliasing": "auto",
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "workbench.preferredDarkColorTheme": "One Dark Pro Darker",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 4,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true,

  /*
   * Language Settings
   */
  "grunt.autoDetect": "off",
  "jake.autoDetect": "off",
  "gulp.autoDetect": "off",
  //  DOTENV
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // ERB
  "[erb]": {
    "editor.defaultFormatter": "elia.erb-formatter"
  },
  // .ignore
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // JSON
  "json.schemas": [
    {
      "fileMatch": ["/.babelrc"],
      "url": "https://json.schemastore.org/babelrc"
    },
    {
      "fileMatch": ["/.prettierrc"],
      "url": "https://json.schemastore.org/prettierrc"
    },
    {
      "fileMatch": ["/vercel.json"],
      "url": "https://openapi.vercel.sh/vercel.json"
    }
  ],
  // Markdown
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "markdown.extension.italic.indicator": "_",
  // Ruby
  "[ruby]": {
    "editor.defaultFormatter": "rebornix.ruby"
  },
  "ruby.lint": {
    "rubocop": false,
    "standard": true
  },
  "ruby.format": "standard",
  // Properties
  "[properties]": {
    "editor.formatOnSave": false
  },
  // Shell
  // "[shellscript]": {
  //   "editor.defaultFormatter": "foxundermoon.shell-format"
  // },
  // Typescript
  "typescript.surveys.enabled": false,

  /*
   * Plugins
   */

  //  Alpine
  "alpine-intellisense.settings.languageScopes": "html,erb",
  // Customize UI
  "customizeUI.activityBar": "bottom",
  "customizeUI.activityBarHideSettings": true,
  "customizeUI.listRowHeight": 20,
  "customizeUI.titleBar": "frameless",
  "customizeUI.stylesheet": {
    ".editor .title .actions-container .action-item a[title=\"Open Settings (UI)\"]": "visibility: initial;",
    ".editor .title .actions-container .action-item a[title=\"Open Settings (JSON)\"]": "visibility: initial;",
    ".editor .title .actions-container": "flex-direction: row-reverse;",
    ".editor .scrollbar .slider": "visibility: hidden",
    ".editor .scrollbar:hover .slider": "visibility: initial",
    ".search-view .search-widgets-container": "padding-top: 2px !important"
  },
  // Codespaces
  "github.codespaces.createCodespaceInNewWindow": true,
  // Copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  // Frontmatter
  "frontMatter.telemetry.disable": true,
  "frontMatter.templates.enabled": true,
  "frontMatter.templates.prefix": "",
  "frontMatter.content.supportedFileTypes": ["md", "mdx", "markdown", "erb"],
  // GitHub Pull Requests
  "githubPullRequests.defaultMergeMethod": "squash",
  "githubPullRequests.focusedMode": false,
  "githubPullRequests.remotes": ["origin"],
  "githubPullRequests.pullBranch": "prompt",
  // Gitlens
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": true
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command"
  ],
  "gitlens.hovers.currentLine.over": "line",
  // OneDarkPro
  "oneDarkPro.bold": true,
  // Project Manager
  "projectManager.git.baseFolders": ["~/git", "~/vaults"],
  // Tailwind CSS
  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "md": "html",
    "ruby": "html"
  },
  // How I VSCode
  "howIVSCode.userIdentificationKey": "64ff14584de5853a2f81c2ecc0205f",
  // Headwind
  "headwind.runOnSave": false,
  // YAML
  "redhat.telemetry.enabled": false,
  // Repper
  "repper.exe": "/Users/andrew.mason/.asdf/shims/repper",
  // Solargraph
  "solargraph.diagnostics": true,
  "solargraph.bundlerPath": "/Users/andrew.mason/.asdf/shims/bundle",
  // VIM
  "vim.showMarksInGutter": true,
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.linkedEditing": true,
  "workbench.sideBar.location": "right",
  // Advanced New File
  "advancedNewFile.exclude": {
    "node_modules": true,
    ".bundle": true,
    "output": true,
    "build": true,
    "tmp": true,
    "rails.rb": true,
    ".bridgetown-cache": true,
    ".bridgetown-webpack": true,
    ".torchlight-cache": true,
    ".vercel": true,
    ".frontmatter": true
  },
  "advancedNewFile.showInformationMessages": true,
  "advancedNewFile.convenienceOptions": ["last", "current", "root"],
  "diffEditor.ignoreTrimWhitespace": false,
  "prettier.printWidth": 120,
  "shellformat.path": "/Users/andrew.mason/shfmt",
  "shellformat.effectLanguages": [
    "shellscript",
    "dockerfile",
    "dotenv",
    "hosts",
    "jvmoptions",
    "ignore",
    "gitignore",
    "properties",
    "spring-boot-properties",
    "azcli",
    "bats",
    "zsh"
  ],
  "js/ts.implicitProjectConfig.checkJs": true,
  "tailwindcss-highlight.languages": [
    "html",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "php",
    "blade",
    "svelte",
    "erb",
    "liquid",
    "haml",
    "markdown"
  ],
  "tailwind-fold.supportedLanguages": [
    "erb",
    "liquid",
    "haml",
    "html",
    "typescriptreact",
    "javascriptreact",
    "typescript",
    "javascript",
    "vue-html",
    "vue",
    "php",
    "markdown",
    "coffeescript"
  ],
  "workbench.iconTheme": "file-icons"
  //
  //
  // UPDATES BELOW THIS LINE
  //
  //
}
